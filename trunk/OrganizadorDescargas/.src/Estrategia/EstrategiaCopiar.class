' Gambas class file

Inherits InterfaceCrearComando
Private comandotmpCopiar As New Copiar

Public Sub guard(valor As String) As Boolean
  
  If valor = ("Copiar") Then 
    Return True
  Else
    Return False
  Endif
  
End

Public Sub crearComando(linea As String) As Comando
  
  Dim palabras As New String[]
  Dim listaExtensiones As New String[]
  
  palabras = Split(linea, gb.Tab)
  If palabras.count = 0 Then
    Return Null
  Else
    comandotmpCopiar.nombre = palabras[0] 'nombre
    comandotmpCopiar.RutaDestino = palabras[1] 'carpeta destino
    listaExtensiones = Split(Replace$(palabras[2], ",", ";"), ";") 'extensiones
    comandotmpCopiar.extensiones = listaExtensiones
    Return comandotmpCopiar
  Endif
  
End
